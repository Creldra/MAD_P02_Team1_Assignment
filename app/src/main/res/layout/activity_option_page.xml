<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionPage"
    android:background="@drawable/bg_forest">

    <TextView
        android:id="@+id/backgroundSetter"
        android:layout_width="597dp"
        android:layout_height="315dp"
        android:background="#70000000"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/masterVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Master Volume: "
        android:textColor="#C7FF00"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/backgroundSetter"
        app:layout_constraintTop_toTopOf="@+id/backgroundSetter" />

    <TextView
        android:id="@+id/bgmVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="BGM Volume: "
        android:textColor="#C7FF00"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/backgroundSetter"
        app:layout_constraintTop_toBottomOf="@+id/masterVolume" />

    <TextView
        android:id="@+id/sfxVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="SFX Volume: "
        android:textColor="#C7FF00"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/backgroundSetter"
        app:layout_constraintTop_toBottomOf="@+id/bgmVolume" />

    <Button
        android:id="@+id/opt_back_button"
        android:layout_width="166dp"
        android:layout_height="73dp"
        android:layout_marginTop="240dp"
        android:soundEffectsEnabled="false"
        android:text="Back"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundSetter"
        app:layout_constraintStart_toStartOf="@+id/backgroundSetter"
        app:layout_constraintTop_toTopOf="@+id/backgroundSetter" />

    <Button
        android:id="@+id/parentalbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="false"
        android:text="Parental Stats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>