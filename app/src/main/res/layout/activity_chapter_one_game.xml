<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_forest"
    tools:context=".ChapterOneGame">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="489dp"
        android:layout_height="106dp"
        android:layout_marginTop="55dp"
        android:background="#B9FFFFFF"
        android:text="Text testing"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opt_1"
        android:layout_width="244dp"
        android:layout_height="79dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="204dp"
        android:text="option_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opt_2"
        android:layout_width="244dp"
        android:layout_height="79dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="104dp"
        android:text="option_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opt_3"
        android:layout_width="244dp"
        android:layout_height="79dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="36dp"
        android:text="option_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/opt_4"
        android:layout_width="244dp"
        android:layout_height="79dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="36dp"
        android:text="option_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_returnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="insert_return_value"
        android:textColor="#F30101"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231" />

</androidx.constraintlayout.widget.ConstraintLayout>