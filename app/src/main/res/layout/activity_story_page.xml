<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryPage"
    android:background="@drawable/bg_forest">


    <ImageView
        android:id="@+id/M_Character"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:contentDescription="placeholderimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906"
        app:srcCompat="@drawable/bg_forest" />

    <ImageView
        android:id="@+id/S_Character"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:contentDescription="placeholderimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/bg_forest" />

    <TextView
        android:id="@+id/Dialogue"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="70dp"
        android:background="#79FFFFFF"
        android:text="insert_dialogue_here"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/M_Character"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <Button
        android:id="@+id/NextButton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#808080"
        android:hapticFeedbackEnabled="true"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="@+id/Dialogue"
        app:layout_constraintTop_toTopOf="@+id/Dialogue" />

    <Button
        android:id="@+id/Menubutton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#808080"
        android:hapticFeedbackEnabled="true"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="@+id/Dialogue"
        app:layout_constraintEnd_toEndOf="@+id/Dialogue" />
</androidx.constraintlayout.widget.ConstraintLayout>


